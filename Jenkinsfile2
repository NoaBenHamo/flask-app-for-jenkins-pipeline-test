pipeline {
    agent {
        node {
            label 'jenkins-slave'
        }
   }
  stages {
    stage('login to docker') {
            steps {
                script {
                    // login to dockerhub
                    sh "docker login -u noabenhamo -p Aa123456123456"
                }
            }
        }
    
    stage('Clone Repository') {
      steps {
        git url: 'https://github.com/NoaBenHamo/flask-app-for-jenkins-pipeline-test.git', credentialsId: 'github-credentials', branch: 'master'
      }
    }
    
    stage('pull image and run the container') {
      steps {
        sh 'docker run -p 80:80 -itd noabenhamo/flask-app-jenkins-pipeline-project'
      }
    }
  }
}

